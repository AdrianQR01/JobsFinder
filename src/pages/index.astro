---
import Layout from '../layouts/Layout.astro';
import CVUploader from '../components/CVUploader.astro';
---

<Layout>
<div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">
            Start Your Journey
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-lg mx-auto">
            Upload your CV to get started. We'll analyze it and help you find your dream job.
        </p>
    </div>
    
    <CVUploader />
</Layout>
